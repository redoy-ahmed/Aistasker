<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/grey4</item>
    </style>

    <style name="AppTheme.WithActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:editTextColor">@color/grey4</item>
        <item name="android:textColorHint">@color/grey4</item>
        <item name="android:textColor">@color/grey4</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/airBlue</item>
    </style>

    <style name="AirtaskeButtonFacebook">
        <item name="android:color">@color/white</item>
        <item name="android:src">@drawable/button_facebook</item>
        <item name="android:textSize">@dimen/huge</item>
        <item name="android:icon">@drawable/ic_facebook_letter_f</item>
    </style>

</resources>
