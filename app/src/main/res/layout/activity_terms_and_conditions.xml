<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/airtasker_application_background">

    <us.feras.mdv.MarkdownView
        android:id="@+id/terms_and_conditions_mark_down_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/terms_and_conditions_button"
        android:layout_marginLeft="@dimen/large"
        android:layout_marginRight="@dimen/large"
        android:scrollbars="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/terms_and_conditions_button" />

    <Button
        android:id="@+id/terms_and_conditions_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_button_green"
        android:text="@string/terms_and_conditions_button_accept" />
</RelativeLayout>
