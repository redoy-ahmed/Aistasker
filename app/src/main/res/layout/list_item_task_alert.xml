<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_image_view_alert_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/medium"
        android:layout_marginLeft="@dimen/medium"
        android:layout_marginStart="@dimen/medium"
        android:layout_marginTop="@dimen/medium"
        android:src="@drawable/ic_bell_invert_icon" />

    <TextView
        android:id="@+id/list_item_text_view_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_item_image_view_alert_icon"
        android:layout_marginLeft="@dimen/large"
        android:layout_marginStart="@dimen/large"
        android:layout_toEndOf="@+id/list_item_image_view_alert_icon"
        android:layout_toRightOf="@+id/list_item_image_view_alert_icon"
        android:textColor="@color/grey5" />

    <ImageView
        android:id="@+id/list_item_image_view_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_item_text_view_distance"
        android:layout_alignLeft="@+id/list_item_text_view_keyword"
        android:layout_alignStart="@+id/list_item_text_view_keyword"
        android:layout_below="@+id/list_item_text_view_keyword"
        android:src="@drawable/ic_location_pin_14dp"
        android:tint="@color/grey3" />

    <TextView
        android:id="@+id/list_item_text_view_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_text_view_keyword"
        android:layout_toEndOf="@+id/list_item_image_view_location"
        android:layout_toRightOf="@+id/list_item_image_view_location"
        android:ellipsize="end"
        android:lines="1"
        android:padding="@dimen/small"
        android:textColor="@color/grey3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/list_item_image_view_location"
        android:layout_alignStart="@+id/list_item_image_view_location"
        android:layout_below="@+id/list_item_text_view_distance"
        android:layout_marginTop="@dimen/medium" />
</RelativeLayout>
