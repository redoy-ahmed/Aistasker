<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end">

    <ImageView
        android:id="@+id/layout_post_task_attachments_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_attach_white" />

    <TextView
        android:id="@+id/layout_post_task_attachments_text_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_post_task_attachments_image_view"
        android:layout_marginLeft="-2dp"
        android:layout_marginStart="-2dp"
        android:layout_toEndOf="@+id/layout_post_task_attachments_image_view"
        android:layout_toRightOf="@+id/layout_post_task_attachments_image_view"
        android:paddingEnd="@dimen/small"
        android:paddingRight="@dimen/small"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_toEndOf="@+id/layout_post_task_attachments_image_view"
        android:layout_toRightOf="@+id/layout_post_task_attachments_image_view" />
</RelativeLayout>
