<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_details_offers_layout_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/large">

    <TextView
        android:id="@+id/task_details_offers_layout_text_view_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/task_details_offers_layout_offers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/task_details_offers_layout_text_view_no_offers_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/medium"
        android:drawableTop="@drawable/ic_waiting_offers"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:paddingBottom="@dimen/large"
        android:paddingEnd="@dimen/large"
        android:paddingLeft="@dimen/large"
        android:paddingRight="@dimen/large"
        android:paddingStart="@dimen/large"
        android:paddingTop="@dimen/medium"
        android:text="@string/task_details_awaiting_offers_label"
        android:textColor="@color/grey4" />

    <Button
        android:id="@+id/task_details_offers_layout_button_view_all_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/large"
        android:text="@string/task_details_view_all_offers_button" />
</LinearLayout>
