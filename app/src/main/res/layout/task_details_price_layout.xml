<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_page_standard"
    android:layout_marginRight="@dimen/margin_page_standard"
    android:layout_marginTop="@dimen/margin_page_standard"
    android:background="@drawable/background_action_box_bottom_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_confirmed_box_top_grey"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/task_details_price_status_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_card_12dp" />

        <TextView
            android:id="@+id/task_details_price_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_page_standard"
            android:paddingEnd="@dimen/medium"
            android:paddingLeft="@dimen/medium"
            android:paddingRight="@dimen/medium"
            android:paddingStart="@dimen/medium"
            android:paddingTop="@dimen/margin_page_standard" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:orientation="vertical"
        android:paddingBottom="@dimen/large"
        android:paddingTop="@dimen/large">

        <TextView
            android:id="@+id/task_details_price_approx_hours_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task_details_price_amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_marginBottom="@dimen/medium"
            android:layout_marginTop="@dimen/medium"
            android:textColor="@color/grey5"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/task_details_price_per_worker_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_details_per_tasker"
            android:textColor="@color/grey5"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_details_price_increase_price_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_plus"
            android:drawablePadding="@dimen/medium"
            android:drawableStart="@drawable/ic_plus"
            android:paddingBottom="@dimen/large"
            android:paddingTop="@dimen/large"
            android:text="@string/task_details_increase_price"
            android:textColor="@color/airBlue"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_details_price_pending_price_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/orangeLight"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/large"
        android:paddingRight="@dimen/large"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingBottom="@dimen/large"
            android:paddingTop="@dimen/large"
            android:text="@string/task_details_pending_price_increase"
            android:textColor="@color/orangeDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task_details_price_pending_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey5"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:orientation="vertical"
        android:paddingBottom="@dimen/medium">

        <View
            android:id="@+id/task_details_price_status_divider_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey2"
            android:visibility="gone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_details_price_actions_linear_layout_action_button"
            android:layout_marginBottom="@dimen/medium"
            android:minHeight="@dimen/task_detail_action_button_height" />

        <TextView
            android:id="@+id/task_details_price_prompt_info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:paddingLeft="@dimen/large"
            android:paddingRight="@dimen/large"
            android:text="@string/task_details_prompt_info"
            android:textColor="@color/grey5"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
